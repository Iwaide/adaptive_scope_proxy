<% content_for :title, "プロジェクト" %>
<% content_for :head do %>
  <style>
    :root {
      --bg: #f8fafc;
      --card: #ffffff;
      --text: #0f172a;
      --muted: #475569;
      --accent: #2563eb;
      --border: #e2e8f0;
      --chip: #0ea5e9;
    }
    body {
      margin: 0;
      padding: 0;
      font-family: "SF Pro Display", "Helvetica Neue", Arial, sans-serif;
      background: radial-gradient(circle at 20% 20%, #e0f2fe 0, #f8fafc 35%, #ffffff 100%);
      color: var(--text);
    }
    .page {
      max-width: 1080px;
      margin: 0 auto;
      padding: 32px 24px 48px;
    }
    .page__header h1 {
      margin: 0 0 4px;
      font-size: 32px;
      letter-spacing: -0.02em;
    }
    .page__header p {
      margin: 0;
      color: var(--muted);
    }
    .filters {
      display: none;
    }
    .summary {
      display: flex;
      align-items: baseline;
      gap: 8px;
      margin: 12px 0 20px;
      color: var(--muted);
    }
    .summary strong {
      font-size: 24px;
      color: var(--text);
    }
    .project-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 14px;
    }
    .project {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 16px;
      box-shadow: 0 10px 30px rgba(15, 23, 42, 0.05);
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    .project__title {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 10px;
    }
    .project__title h3 {
      margin: 0;
      font-size: 18px;
    }
    .badge {
      padding: 6px 10px;
      border-radius: 999px;
      background: #e0f2fe;
      color: #0ea5e9;
      font-weight: 700;
      font-size: 13px;
      letter-spacing: 0.02em;
    }
    .meta {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 8px;
      color: var(--muted);
      font-size: 14px;
    }
    .chips {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      margin: 4px 0;
    }
    .chip {
      padding: 6px 8px;
      border-radius: 999px;
      background: #e0f2fe;
      color: var(--chip);
      font-weight: 600;
      font-size: 12px;
      letter-spacing: 0.01em;
    }
    .empty {
      margin-top: 12px;
      color: var(--muted);
    }
    .sql-log {
      margin: 16px 0;
      padding: 12px 14px;
      background: #0f172a;
      color: #e2e8f0;
      border-radius: 12px;
      border: 1px solid #1e293b;
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: 13px;
      line-height: 1.5;
      white-space: pre-wrap;
      word-break: break-all;
    }
    .sql-log strong {
      display: block;
      margin-bottom: 6px;
      color: #38bdf8;
      font-size: 14px;
    }
  </style>
<% end %>

<div class="page">
  <div class="page__header">
    <h1>プロジェクト</h1>
    <p>デバッグ用に実際のSQLを確認できます。</p>
  </div>

  <% if @executed_sql.present? %>
    <div class="sql-log">
      <strong>Executed SQL</strong>
      <%= @executed_sql.join("\n\n") %>
    </div>
  <% end %>

  <div class="summary">
    <strong><%= @projects.size %></strong>
    <span>件のプロジェクトがヒット</span>
  </div>

  <% if @projects.any? %>
    <ul class="project-list">
      <% @projects.each do |project| %>
        <li class="project">
          <div class="project__title">
            <h3><%= project.name %></h3>
            <span class="badge"><%= project.status %></span>
          </div>

          <div class="meta">
            <span>リスク: <strong><%= project.risk_level %></strong></span>
            <span>予算: <%= number_to_currency(project.budget_cents.to_i / 100.0) %></span>
            <span>期限: <%= project.due_on&.to_fs(:long) || "—" %></span>
            <span>ラベル: <%= project.labels.size %></span>
            <span>タスク: <%= project.tasks.size %></span>
          </div>

          <% labels = project.labels.to_a %>
          <% if labels.any? %>
            <div class="chips">
              <% labels.first(6).each do |label| %>
                <span class="chip"><%= label.name %></span>
              <% end %>
              <% if labels.size > 6 %>
                <span class="chip">+<%= labels.size - 6 %> 件</span>
              <% end %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="empty">選択されたスコープに一致するプロジェクトはありません。</p>
  <% end %>
</div>
